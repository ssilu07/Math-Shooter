<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.royals.mathshootergame"> <!-- Target API levels for Play Store -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />
    <!-- Permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Features -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo_math_shooter"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo_math_shooter"
        android:theme="@style/Theme.MathShooter"
        tools:targetApi="31">
        <activity
            android:name="com.royals.mathshootergame.FormulaListActivity"
            android:exported="false" />
        <activity
            android:name="com.royals.mathshootergame.LearnActivity"
            android:exported="false" />
        <activity
            android:name="com.royals.mathshootergame.TableGridActivity"
            android:exported="false" />
        <activity
            android:name="com.royals.mathshootergame.MathQuizActivity"
            android:exported="false" />
        <activity
            android:name="com.royals.mathshootergame.MathTableActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.royals.mathshootergame.MathLearnerActivity"
            android:exported="false"
            android:screenOrientation="portrait" /> <!-- Splash Screen Activity -->
        <activity
            android:name="com.royals.mathshootergame.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MathShooter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Menu Activity -->
        <activity
            android:name="com.royals.mathshootergame.MenuActivity"
            android:exported="false"
            android:theme="@style/Theme.MathShooter" /> <!-- Main Game Activity -->
        <activity
            android:name="com.royals.mathshootergame.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:theme="@style/Theme.MathShooter.NoActionBar" /> <!-- Settings Activity -->
        <activity
            android:name="com.royals.mathshootergame.SettingsActivity"
            android:exported="false"
            android:parentActivityName="com.royals.mathshootergame.MenuActivity"
            android:theme="@style/Theme.MathShooter" /> <!-- Leaderboard Activity -->
        <activity
            android:name="com.royals.mathshootergame.LeaderboardActivity"
            android:exported="false"
            android:parentActivityName="com.royals.mathshootergame.MenuActivity"
            android:theme="@style/Theme.MathShooter" />
    </application>

</manifest>